{
  "from": "none",
  "shell": "bash",
  "paths": {
    "scripts/*": "~/.local/bin/",
    "etc/*": {
      "path": "/etc/",
      "owner": "root"
    },
    "bash/*": {
      "strategy": "concatenate"
    },
    "bash/bashrc": {
      "path": "~/.bashrc",
      "strategy": "concatenate"
    },
    "bash/profile": {
      "path": "~/.bash_profile",
      "strategy": "concatenate"
    }
  }
}

{
  //   FILES
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "files.simpleDialog.enable": true,
  //   SEARCH
  "search.quickOpen.includeHistory": false,
  "search.exclude": {
    "**/.dart_tool": true,
    "**/.ipynb_checkpoints": true,
    "**/env": true,
    "**/.metadata": true
  },
  //   WORKBENCH
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  //   EDITOR
  "editor.minimap.enabled": false,
  "editor.suggestSelection": "first",
  "editor.rulers": [120],
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.formatOnSave": true,
  "editor.linkedEditing": true,
  "editor.detectIndentation": false,
  "editor.suggest.localityBonus": true,
  "editor.stickyScroll.enabled": false,
  "editor.unicodeHighlight.invisibleCharacters": true,
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.unicodeHighlight.includeComments": true,
  //"editor.cursorSurroundingLines": 1000,
  "editor.smoothScrolling": true,
  "editor.experimentalGpuAcceleration": "on",
  //   WINDOW
  "window.openFoldersInNewWindow": "off",
  "window.newWindowDimensions": "maximized",
  "window.restoreFullscreen": true,
  //   TERMINAL
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.stickyScroll.enabled": false,
  //   COPILOT, CHAT & MCP
  // you can toggle with alt+\
  "github.copilot.inlineSuggest.enabled": false,
  "chat.instructionsFilesLocations": {
    ".github/instructions": true
    //"/tmp/postman-collections-post-response.instructions.md": true
  },
  //   GIT
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.defaultCloneDirectory": "~/Documents/git",
  "github.gitProtocol": "ssh",
  //   JIRA & BITBUCKET
  //"atlascode.bitbucket.enabled": true,
  //"atlascode.jira.enabled": true,
  //   SPELLRIGHT
  "spellright.configurationScope": "user",
  "spellright.language": ["en", "it"],
  "spellright.documentTypes": [
    "latex",
    "markdown",
    "text",
    "yaml",
    "plaintext"
  ],
  "spellright.ignoreFiles": ["**/.gitignore", "**/.spellignore", "**/.vscode/"],
  "spellright.parserByClass": {
    "dart": {
      "parser": "code"
    }
  },
  "spellright.ignoreRegExps": [],
  "spellright.notificationClass": "hint",
  //   SETTINGSSYNC
  "settingsSync.ignoredSettings": ["yaml.schemas"],
  "settingsSync.keybindingsPerPlatform": false,
  //   TODOTREE
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]"
  ],
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  //   ZEN MODE
  "zenMode.hideLineNumbers": false,
  "zenMode.fullScreen": false,
  //   ERROR LENS
  "errorLens.enabledDiagnosticLevels": ["warning", "info", "error", "hint"],
  "errorLens.enabled": false,
  //   LANGUAGE-SPECIFIC SETTINGS
  //PYTHON
  //MARKDOWN
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
    //"editor.rulers": []
  },
  "markdown.updateLinksOnFileMove.enabled": "always",
  //JSON
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  //XML
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  //YAML
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  //CSS
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,
  "color-highlight.markerType": "dot-before",
  "explorer.confirmDelete": false,
  "testExplorer.useNativeTesting": true,
  "security.workspace.trust.enabled": false,
  "dev.containers.executeInWSL": true
}
